<form method="POST" id="add_user" action="/api/users">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" value="" placeholder="FULL NAME">

        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="" placeholder="abc@email.com">
            
        </div>
        
            
        <div class="form-group">
            <label for="phone" class="text-light">Mobile Number</label>
            <input type="number" name="phone" value="" placeholder="07982739172">
            
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="">
            
        </div>
        <div class="form-group">
            <label for="you" class="text-light">tell us about yourself</label>
            <input type="text" name="you" value="" placeholder="">
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update" style="width: 200px;">APPLY</button>
            </div>
        </div>
    </div>
    
</form>